<h2>edit me!</h2>
<form class="col-md-6" method="POST" action="/auroras/<%= aurora.id %>">
  <input type="hidden" name="_method" value="PUT">
  <div>
    <label for="country">Country</label>
    <input class="form-control" type="text" name="country" id="country" value="<%= aurora.country %>">
  </div>
  <div>
    <label for="image">Image URL</label>
    <input class="form-control" type="text" name="image" id="image" value="<%= aurora.image %>">
  </div>
  <button class="btn btn-primary">Save changes</button>
</form>
