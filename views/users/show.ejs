<h2 class="title">Hello, <%= user.username %>! </h2>
<div class="row">
  <div class="col-md-6">
    <h4>Your profile details</h4>

      <div class="profile-img" style="background-image: url(<%= user.imageSRC %>)">
        </div>
      <form class="buttons" method="POST" action="/users/<%= user.id %>">
        <a href="/users/<%= user.id %>/edit"><button class="btn btn-primary">Edit Account</button></a>
        <input type="hidden" name="_method" value="DELETE">
        <button class="btn btn-danger">Delete Account</button>
      </form>
  </div>
  <div class="col-md-6">
    <h4>My places</h4>
  </div>


</div>
